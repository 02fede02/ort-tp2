@model MVCBasico.Models.VentaEntradas

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-light">Editar</h1>

<h4 class="text-light">Venta Entradas</h4>
<hr />
<div class="row text-light">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CantidadEntradas" class="control-label"></label>
                <input asp-for="CantidadEntradas" class="form-control" />
                <span asp-validation-for="CantidadEntradas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecitalId" class="control-label"></label>
                <select asp-for="RecitalId" class="form-control" asp-items="ViewBag.RecitalId"></select>
                <span asp-validation-for="RecitalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioTotal" class="control-label"></label>
                <input asp-for="PrecioTotal" class="form-control" />
                <span asp-validation-for="PrecioTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
